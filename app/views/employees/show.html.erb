<h1>Profile</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>E-mail Address</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @employee.first_name %></td>
        <td><%= @employee.last_name %></td>
        <td><a href="<%= "mailto:#{@employee.email}" %>"><%= @employee.email %></a></td>
      </tr>
  </tbody>
</table>



<table>
<thead>
  <tr>
    <th>Sale Date</th>
    <th>Sale Amount</th>
  </tr>
</thead>

<tbody>
  <% @sales.each do |sale| %>
    <tr>
      <td><%= sale.sale_date %></td>
      <td><%= sale.sale_amount %></td>
    </tr>
  <% end %>
</tbody>
</table>
