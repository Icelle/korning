<h1>Sales</h1>

<table>
  <thead>
    <tr>
      <th>Sale Date</th>
      <th>Sale Amount</th>
      <th>Invoice Number</th>
      <th>Units Sold</th>
      <th>Price Per Unit</th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.sale_date %></td>
        <td><%= sale.sale_amount %></td>
        <td><%= sale.invoice_no %></td>
        <td><%= sale.units_sold %></td>
        <th><%= sale.price_per_unit %></th>
      </tr>
    <% end %>
  </tbody>
</table>

