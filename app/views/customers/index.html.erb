<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Website</th>
      <th>Account Number</th>
      <th>Invoice Frequency</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><a href="<%= customer.website %>"><%= customer.website %></a></td>
        <td><%= customer.account_number %></td>
        <td><%= "NIL" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
